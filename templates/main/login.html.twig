{% extends 'layout.html.twig' %}

{% block title %}
    Page de login
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container-contact1" style="text-align:center; width: 50%">
        <form action="{{ path('login') }}" method="post">
            {% if error %}
                <div class="alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="wrap-input1 validate-input">
                <label for="login">Login (mail ou pseudo) :</label>
                <input class="input1 form-control" type="text" id="name" name="_username" value="{{ last_username }}">
                <span class="shadow-input1"></span>
            </div>
            <div class="wrap-input1 validate-input">
                <label for="mdp">Mot de passe :</label>
                <input class="input1 form-control" type="password" id="name" name="_password">
                <span class="shadow-input1"></span>
            </div>
            <div>
                <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                <label for="remember_me">Rester connecté ?</label>
            </div>
            <div class="container-contact1-form-btn" style="margin: 60px">
                <button class="contact1-form-btn" type="submit">Connexion</button>
                <div style="margin-left: 10px; margin-top: 10px">
                    <a href="#">Mot de passe oublié</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}


