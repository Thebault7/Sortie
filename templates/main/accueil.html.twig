    <div class="filtrer" style="float: left;">
        <h5>Filtrer les sorties</h5>
    </div>
    <form action="{{ path('accueil') }}" method="post">
        <label for="site">Site :</label>
        <select>

        </select>


        <div class="wrap-input1" style="width: 425px">
            <label for="nomsortie">Le nom de la sortie contient :</label>
            <input type="text"
                   class="input1 form-control"
                   placeholder="search" id="Nom"
                   name="nom_sortie"
                   style="width: 400px; float: left;">
            <span class="shadow-input1"></span>
        </div>
        <div class="wrap-input1" style="width: 425px">
            <label for="datesortie">Entre :</label>
            <input type="date"
                   class="input1 form-control"
                   id="date_debut"
                   name="date_debut"
                   style="width: 400px; float: left;">
            <span class="shadow-input1"></span>
        </div>
        <div class="wrap-input1" style="width: 425px">
            <label for="datefinsortie">et :</label>
            <input type="date"
                   class="input1 form-control"
                   id="date_fin"
                   name="date_fin"
                   style="width: 400px; float: right;">
            <span class="shadow-input1"></span>
        </div>
        <div class="col">
            <input type="checkbox" name="organisateur" value="organisateur"> <label for="organisateur">Sorties dont je
                suis l'organisateur/trice</label><br>
            <input type="checkbox" name="inscrit" value="inscrit"> <label for="inscrit">Sorties auxquels je suis
                inscrit/e</label><br>
            <input type="checkbox" name="pas_inscrit" value="pas_inscrit"> <label for="pas_inscrit">Sorties auxquels je
                ne suis pas inscrit/e</label><br>
            <input type="checkbox" name="passees" value="passees"> <label for="passees">Sorties passées</label><br>
        </div>
        <div class="container-contact1-form-btn">
            <button type="submit" class="contact1-form-btn"
                    name="rechercher" style="float: right; width: 425px;">Rechercher
            </button>
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Clôture</th>
                <th scope="col">Inscrits/places</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrits</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
