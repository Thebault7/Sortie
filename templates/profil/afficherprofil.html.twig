{% extends 'layout.html.twig' %}

{% block body %}


    <section class="contact_section layout_padding mt-0 pt-5">
    <div class="container">

        <!-- titre de la page-->
        <div class="heading_container mb-0 pb-0">
            <h2>
                Mon profil
            </h2>
        </div>

        {% if participant.photo is not null %}
        <div class="row mt-1 mb-2">
            <img class="img-thumbnail mx-auto" src="{{ asset('assets/img/'~participant.photo) }}" alt="" style="border-radius:50%; width: 200px">
        </div>
        {% endif %}

        <div class="row mt-2">
            <div class="col-3 offset-4">
                <b>Prénom</b>
            </div>
            <div class="col-5">
                {{ participant.prenom }}
            </div>
        </div>

        <div class="row mt-1">
            <div class="col-3 offset-4">
                <b>Nom</b>
            </div>
            <div class="col-5">
                {{ participant.nom }}
            </div>
        </div>

        <div class="row mt-1">
            <div class="col-3 offset-4">
                <b>Téléphone</b>
            </div>
            <div class="col-5">
                {{ participant.telephone }}
            </div>
        </div>

        <div class="row mt-1">
            <div class="col-3 offset-4">
                <b>E-mail</b>
            </div>
            <div class="col-5">
                {{ participant.mail }}
            </div>
        </div>

        <div class="row mt-1">
            <div class="col-3 offset-4">
                <b>Lieu d'études</b>
            </div>
            <div class="col-5">
                {{ participant.site.nom }}
            </div>
        </div>


        <div class="d-flex justify-content-center ">
            <!-- boutons -->
            <div class="ml-1 mr-1">
                <a class="bouton1" href="{{ path('modifprofil') }}">Modifier</a>
            </div>
            <div class="ml-1 mr-1">
                <a class="bouton1" href="{{ path('accueil') }}">Retour</a>
            </div>

        </div>

    </div>
    </section>

{% endblock %}
{% block title %}mon profil{% endblock %}