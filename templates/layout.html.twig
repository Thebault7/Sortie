    <title>{% block title %}Layout{% endblock %}</title>
    <style>
        .bouton1 {
            display: inline-block !important;
            padding: 10px 30px !important;
            background-color: #0fcfdc;
            border-radius: 5px !important;
            color: white;
            text-align: center;
            align-self: center;
            margin-top: 30px !important;
            outline: none !important;
            border: none;
        }

        .bouton1:hover {
            background-color: #0fcfdc;
            color: black !important;
        }

        .bouton2 {
            display: inline-block !important;
            padding: 10px 30px !important;
            background-color: 	#bf6040;
            border-radius: 5px !important;
            color: white;
            text-align: center;
            align-self: center;
            margin-top: 30px !important;
            margin-left: 100px
        }

        .bouton2:hover {
          {#  background-color: #0fcfdc;#}
            color: black !important;
        }

        .bouton3 {
            display: inline-block !important;
            padding: 10px 30px !important;
            background-color: 	#bf4040;
            border-radius: 5px !important;
            color: white;
            text-align: center;
            align-self: center;
            margin-top: 30px !important;
            margin-left: 100px
        }

        .bouton3:hover {
        {#background-color: #0fcfdc;#}
            color: black !important;
        }

        #map_box {
            border: 2px solid #0fcfdc;
            border-radius: 5px;
        }

        .detail-box {
            border: 1px solid #0fcfdc;
            margin: 5px 2px 5px 2px;
            text-align: center;
            padding: 1px;
        }

        .fa-plus-square {
            color: #0fcfdc;
        }

        .fa-plus-square:hover {
            color: #2a2132
        }

        body {
            font-family: 'Poppins', sans-serif;

        }


        .detail-box a {
            display: inline-block;
            padding: 5px 10px;
            background-color: black;
            color: white;
            border-radius: 40px;
            text-transform: uppercase;
            margin-top: 10px;
        }


        h2 {
            font-weight: bold;
            text-transform: uppercase;
        }

        a:hover,
        a:focus {
            color: black;
        }

        a,
        a:hover,
        a:focus {
            text-decoration: none;
        }

        .heading_container {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .nav-link {
            margin: 10px 30px;
            padding: 0;
            color: #0fcfdc;
            text-align: center;
            position: relative;
            text-transform: uppercase;

        }

        .nav-link:hover .nav-link::before {
            color: #2a2132;
        }

        #titrePage {
            font-size: 20px;
            font-weight: 700;
            color: #0fcfdc;
            text-transform: uppercase;
        }


    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body class="sub_page">
<div class="hero_area">
    <!-- header section strats -->
    <header class="header_section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-11 offset-lg-1">
                    {% include 'includes/navbar.html.twig' %}
                </div>
            </div>

        </div>
    </header>
</div>
<div class="row ml-0 mr-0 d.flex flex-row-reverse" style="background-color: #F8F8F8;">
    {% if app.user %}
        <p class="mr-1 mb-0 pb-1 pt-1 align-self-center" style="font-size: 0.8rem"><i>
                Bienvenue <span class="font-weight-bold">{{ app.user.prenom }} {{ app.user.nom }}</span>!
                Date du jour : <span
                        class="font-weight-bold">{{ 'now'|localizeddate('none', 'none', 'fr', null, 'd MMMM Y') }}</span>
            </i>
        </p>
    {% endif %}
</div>


<main>
    <div class="container-fluid">
        {% block body %}Layout{% endblock %}
    </div>
</main>

{% include 'includes/footer.html.twig' %}

{% block javascripts %}{% endblock %}

</body>
</html>

