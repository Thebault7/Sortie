    {{ form_start(sortieFormView, {label_attr: {class: 'contact1-form validate-form'}}) }}

    <div class="row">
        <div class="col-sm-12 col-md-6">

            <div class="wrap-input1 validate-input" data-validate="Date limite d'inscrptions est requise">
                {{ form_label(sortieFormView.dateLimiteInscription) }}
